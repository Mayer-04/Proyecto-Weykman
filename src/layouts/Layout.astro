---
import FooterContact from "../components/FooterContact.astro";
import HeaderMenu from "../components/HeaderMenu.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Página personal de Weykman Jojoa Parra, candidato a alcalde de Consacá-Nariño, Aquí encontrarás información sobre mis proyectos, actividades e inicitivas para traer el cambio a todo el municipio de Consacá."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="icons/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="author" content="Mayer Andres Chaves Prada" />
    <meta
      name="keywords"
      content="Nariño, Consacá, Comunidad, Progreso, Proyectos, Bienestar, Cambio"
    />
  </head>
  <body class="dark:dark:bg-zinc-800">
    <HeaderMenu logo="Weyman" />
    <slot />
    <FooterContact />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Inter";
    src: local("Inter"), url("/fonts/Inter.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    font-family: "Inter", ui-sans-serif;
  }
</style>
