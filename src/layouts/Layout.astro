---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Página personal de Weykman Jojoa Parra, candidato a alcalde de Consacá-Nariño, Aquí encontrarás información sobre mis proyectos, actividades y objetivos para mejorar nuestra comunidad"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="icons/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="author" content="Mayer Andres Chaves Prada" />
    <meta
      name="keywords"
      content="Nariño, Consacá, Comunidad, Progreso, Proyectos, Bienestar"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>
