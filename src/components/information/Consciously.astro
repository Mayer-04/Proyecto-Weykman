---
import IframeTwo from "../iframes/IframeTwo.astro";

interface Props {
  title: string;
  firstText: string;
  point1: string;
  point2: string;
  point3: string;
  point4: string;
  secondText: string;
}

const { title, firstText, secondText } = Astro.props;
const { point1, point2, point3, point4 } = Astro.props;
---

<section class="flex flex-col items-center">
  <h2 class="mb-5 text-2xl font-bold text-sky-600">{title}</h2>
  <p class="mb-5 dark:text-white lg:text-lg">
    {firstText}
  </p>
  <ul class="max-w-lgspace-y-1 text-sky-600 list-disc list-inside mb-5">
    <li>
      {point1}
    </li>
    <li>
      {point2}
    </li>
    <li>{point3}</li>
    <li>
      {point4}
    </li>
  </ul>
  <p class="mb-5 dark:text-white lg:text-lg">
    {secondText}
  </p>
  <IframeTwo />
</section>
