---
interface Props {
  title: string;
  text: string;
  image: string;
}
const { title, text, image } = Astro.props;
---

<article class="flex flex-col items-center relative">
  <h2
    class="text-center mb-4 md:mb-6 text-2xl md:text-3xl font-bold text-sky-600"
  >
    {title}
  </h2>
  <p class="text-base md:text-lg mb-4 md:mb-6 relative dark:text-white">
    {text}
    <span
      class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 block w-1/4 h-1/4 blur-3xl bg-blue-300/80 group-hover/card:opacity-60 group-hover/card:w-full group-hover/card:h-full duration-300"
    ></span>
  </p>
  <img
    class="w-[280px] h-[200px] md:w-[400px] md:h-[300px] rounded-lg object-cover"
    src={image}
    alt={title}
  />
</article>
